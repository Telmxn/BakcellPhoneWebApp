@{
    ViewBag.Title = "OnWayStatus";
}


@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h4>Sifariş</h4>
        <hr />

        <div class="form-group">
            <label class="col-md-2 control-label" for="Courier">Kuryer</label>
            <div class="col-md-10">
                @Html.DropDownList("Kuryer", (IEnumerable<SelectListItem>)ViewBag.Couriers, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Göndər" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri", "PendingOrders", "Home", null, null)
</div>