@model IEnumerable<BakcellPhoneWebApp.Models.Courier>

@{
    ViewBag.Title = "Kuryerlər";
}

<link rel="stylesheet" href="~/Content/table.css">

<div class="table-container">
    <div class="table-header">
        <h1 class="big-title">Kuryerlər</h1>
        @Html.ActionLink("Kuryer əlavə et", "AddCourier", null, new { @class = "button" })
    </div>
    <table>
        <thead>
            <tr>
                <th scope="col">Ad</th>
                <th scope="col">Soyad</th>
                <th scope="col">İstifadəçi adı</th>
                <th scope="col">Balans</th>
                <th scope="col">Ünvan</th>
                <th scope="col">Sil</th>
                <th scope="col">Redaktə et</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Name</th>
                    <td data-title="Soyad">@item.Surname</td>
                    <td data-title="İstifadəçi ad">@item.UserName</td>
                    <td data-title="Balans">@item.Balance</td>
                    <td data-title="Ünvan">@item.Location</td>
                    <td data-title="Sil"><a onclick="return confirm('İstifadəçi silinsin?');" href="@Url.Action("DeleteCourier", "Account", new { id = item.Id })"><img src="~/Content/img/delete-icon.svg"></a></td>
                    <td data-title="Redaktə et"><a href="@Url.Action("EditCourier", "Account", new { id = item.Id })"><img src="~/Content/img/edit-icon.svg"></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>