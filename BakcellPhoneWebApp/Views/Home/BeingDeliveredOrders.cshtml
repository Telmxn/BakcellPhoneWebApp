        for (var key of form_data.entries()) {
            console.log(key[0] + ', ' + key[1]);
        }

        $.ajax({
            url: '/Orders/DeliveredStatus/' + id,
            cache: false,
            contentType: false,
            processData: false,
            data: form_data,
            type: 'POST',
            success: function (response) {
                alert(response);
                location.reload();
            },
            error: function (error) {
                console.log(error);
            }
        });


